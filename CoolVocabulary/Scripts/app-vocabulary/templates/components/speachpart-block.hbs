<div class="sp-block">
	<div class="sp-header light-shadow">{{title}}</div>
	<ul class="sp-words table">
		{{#each sortedBookWords as |bookWord|}}
			<li class="{{if bookWord.learnCompleted "completed"}}" >
				<span class="word-container overflow-ellipsis">
					<span class="word" {{action "selectWord" bookWord}} title='{{bookWord.word.value}}'>
					{{bookWord.word.value}}
					</span>
				</span>
				{{#link-to 'wordTranslation' bookWord.id class="show-details text-center"}}
				...
				{{/link-to}}
				<span class="translations overflow-ellipsis text-right">
					{{#each bookWord.translations as |translation|}}
						{{translation.value}}&nbsp;
					{{/each}}
				</span>
				<span class="learn-level">
					{{learn-battery bookWord.learnLevel}}
				</span>
			</li>
		{{/each}}
	</ul>
</div>