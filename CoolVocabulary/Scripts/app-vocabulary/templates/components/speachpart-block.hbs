<div class="sp-block">
	<div class="sp-header">{{title}}</div>
	<ul class="sp-words table">
		{{#each words as |data|}}
			<li id='word_translation_{{data.bookWord.id}}' class="word-translation">
				<span class="word" title='{{data.bookWord.word.value}}'>{{data.bookWord.word.value}}</span>
				<span {{action "showDetails" data.bookWord.id}} class="show-details text-center">...</span>
				<span class="translation text-right">
					{{#each data.translations as |translation|}}
						{{translation.value}}&nbsp;
					{{/each}}
				</span>
			</li>
		{{/each}}
	</ul>
</div>