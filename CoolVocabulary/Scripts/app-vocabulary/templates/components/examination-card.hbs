<div class="container">
	<div class="row flex-centered">
		<div class="col-xs-6">
			<span class="word">
			{{wordToExam.word}}
			</span>
		</div>
		<div class="col-xs-6">
			<ul>
			{{#each wordToExam.translations as |translation|}}
				<li {{action "select" translation}} class="translation {{if translation.isMistake "mistake"}} {{if translation.isCorrect "correct"}}">
					{{translation.word}}
				</li>
			{{/each}}
			</ul>
		</div>
	</div>
</div>