{{learn-hotkeys onNextCard=(action "nextCard") onPrevCard=(action "prevCard") onNextWord=(action "nextWord")}}
<div class="flex-centered fill-absolute">
	<div id="learning-col" class="full-height">
	    <div id="stencil" class="fill-absolute">
	    	<div id="top-block"></div>
	    	<div id="magnifier-block">
	    		<div id="learning-cards" class="fill-absolute">
					{{#each sessionWords as |wordToLearn|}}
						{{learning-card wordToLearn=wordToLearn}}
					{{/each}}
				</div>
 				{{#if isLastWord}}
					{{#link-to 'book'}}
					<button id="finish" class="btn btn-info btn-xs">Finish</button>
					{{/link-to}}
				{{else}}
					<button {{action 'nextWord'}} id="next_word" class="btn btn-success btn-xs">Next word</button>
				{{/if}}
			</div>
			<div id="bottom-block"></div>
	    </div>
		<div id="learning-cards-shadow" class="fill-absolute">
			<div class="learning-card" style="background: transparent;"></div>
			{{#each sessionWords as |wordToLearn|}}
				{{learning-card wordToLearn=wordToLearn isShadow=true}}
			{{/each}}
		</div>
	</div>
</div>