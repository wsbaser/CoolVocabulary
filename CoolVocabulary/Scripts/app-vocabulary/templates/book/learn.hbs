<div class="flex-centered fill-absolute">
	<div id="learning-col" class="full-height">
	    <div id="stencil" class="fill-absolute">
	    	<div id="top-block"></div>
	    	<div id="magnifier-block">
	    		<div id="learning-cards" class="fill-absolute">
					{{#each sessionWords as |wordToLearn|}}
						{{learning-card wordToLearn=wordToLearn}}
					{{/each}}
				</div>
				<button id="next_word" class="btn btn-success btn-xs">Next word</button>
			</div>
			<div id="bottom-block"></div>
	    </div>
		<div id="learning-cards-shadow" class="fill-absolute">
			{{#each sessionWords as |wordToLearn|}}
				{{learning-card wordToLearn=wordToLearn}}
			{{/each}}
		</div>
	</div>
</div>