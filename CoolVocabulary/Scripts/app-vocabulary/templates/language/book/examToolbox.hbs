<div class="col-xs-4">
	{{#link-to 'language' id="currentBook" tabIndex="10" class="overflow-ellipsis"}}
		{{#if options.userBook}}
			{{options.userBook.book.name}}
		{{else}}
			Book
		{{/if}}
	{{/link-to}}
</div>
<div class="col-xs-8 text-right">
	<nav class="words-nav flex-centered">
		{{#each model as |wordToLearn|}}
			<span class="{{if wordToLearn.isHighlighted 'highlighted'}} {{if wordToLearn.isMistake 'mistake'}} word-circle" title="{{wordToLearn.word.value}}"></span>
		{{/each}}
	</nav>
</div>