#ll_article
    #lleo_optionsBtn 
        position: absolute !important
        right: 1px !important
        top: 12px !important
        line-height: 1px !important
        text-decoration: none !important
        font-weight: bold !important
        font-size: 13px !important
        color: #aaa !important
        padding: 2px !important
    	display: none


    #lleo_optionsBtn img
    	width: 12px !important
    	height: 12px !important


    #lleo_sound 
        float: left !important
        width: 16px !important
        height: 16px !important
        margin-left: 12px !important
        background: 0 0 no-repeat !important
        cursor: pointer !important
        display: none !important


    .lleo_has_sound #lleo_sound 
        display: block !important


    #lleo_picOuter 
        position: absolute !important
        float: right !important
        right: 29px
        top: 0
        display: none !important
        z-index: 9 !important


    .lleo_has_pic #lleo_picOuter 
        display: block !important


    #lleo_picOuter:hover 
        z-index: 11 !important


    #lleo_pic
    #lleo_picBig 
        position: absolute !important
        top: 0 !important
        right: 0 !important
        border: solid 2px #fff !important
        -moz-border-radius: 2px !important
    	-webkit-border-radius: 2px !important
    	border-radius: 2px !important
        z-index: 1 !important


    #lleo_pic 
    	position: relative !important
        border: none !important
    	width: 34px !important


    #lleo_picBig 
        box-shadow: -1px 2px 4px rgba(0,0,0,0.3)
        z-index: 2 !important
        opacity: 0 !important
        visibility: hidden !important


    #lleo_picOuter:hover #lleo_picBig 
        visibility: visible !important
        opacity: 1 !important
        -webkit-transition: opacity 0.3s !important
        -webkit-transition-delay: 0.3s !important


    #lleo_transcription 
        color: #486D85 !important
        margin: 0 0 4px 29px !important
        color: #aaaaaa !important


    .lleo_no_trans 
        color: #aaa !important


    .ll-translation-counter 
    	float: right !important
        font-size: 11px !important
        color: #aaa !important
        padding: 2px 2px 1px 10px !important


    .ll-translation-text 
    	float: left !important
    	width: 80% !important


    #lleo_trans a 
        color: #3F669F !important
        padding: 1px 4px !important
        text-decoration: none !important
        text-overflow: ellipsis !important
        overflow: hidden !important


    .ll-translation-item 
    	width: 100% !important
    	float: left !important
    	padding:1px 4px
    	color: #3F669F !important
    	padding: 3px !important
    	border: solid 1px white !important
    	-moz-border-radius: 2px !important
    	-webkit-border-radius: 2px !important
    	border-radius: 2px !important


    .ll-translation-marker 
    	margin: 0px 5px 2px 2px !important


    #lleo_trans
        zoom: 1
        border-top: 1px solid #eeeeee !important
        margin: 10px 0 0 !important
        padding: 5px 30px 0 14px !important


    .lleo_clearfix 
    	display: block !important
    	clear: both !important
    	visibility: hidden !important
    	height: 0 !important
    	font-size: 0 !important


    #lleo_picOuter table
        width: 44px !important
        position: absolute !important
        right: 0 !important
        vertical-align: middle !important


    #lleo_picOuter td
        width: 38px !important
        height: 38px !important
        border: 1px solid #eeeeee !important
        vertical-align: middle !important
        text-align: center !important


    #lleo_picOuter td div 
    	height: 38px !important
    	overflow: hidden !important

    .lleo_has_pic #lleo_word 
    	margin-right: 80px !important

    #lleo_translationsCopntainer1 
    	position: relative !important

    #lleo_translationsCopntainer2 
    	padding: 7px 0 0 !important
    	vertical-align: middle !important

    #lleo_word 
        color: #000 !important
        margin: 0 5px 2px 0 !important
        /*float: left !important;*/

    .lleo_has_sound #lleo_word 
        margin-left: 17px !important

    #lleo_text 
        font-weight: bold !important
        color: #d56e00 !important
        text-decoration: none !important
        cursor: default !important

    #lleo_text.lleo_known 
        cursor: pointer !important
        text-decoration: underline !important


    *.hidden 
        display: none !important


    .infinitive
        color: #D56E00 !important
        text-decoration: none
        border-bottom: 1px dotted #D56E00 !important


    .infinitive:hover
        border: none !important