body
	margin: 0
	padding: 15px
	padding-top: 0

.ctr-blueBg
	background: linear-gradient(to top,#87e0fd 0,#53cbf1 40%,#05abe0 100%) !important


.ctr-popup-header
	text-align: right
	font-size: 16px
	padding: 8px 0 10px

	a
		color: #fff
		text-decoration: none
		margin: 0 5px
		display: inline-block

	a:hover
		text-decoration: underline			


#ctr_root.ctr-block,
#ctr_root .ctr-block
	box-shadow: 2px 2px 7px 1px rgba(0,0,0,.2) !important
    background: url('/images/bg.png') top left repeat #ebeef2 !important