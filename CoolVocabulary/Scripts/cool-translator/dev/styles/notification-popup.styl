@import './common.styl'

#ctr_dialog #ctr_notification
    background: radial-gradient(ellipse at center, #b4df5b 0%,#b4df5b 100%) !important
    position: absolute !important
    bottom: 30px
    right: 20px
    width: 200px !important
    border-radius: 3px !important
    padding: 3px 7px 5px !important
    font-size: 11px !important
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6) !important
    opacity: 0.8 !important
    display: none !important
    cursor: default !important
    z-index: 9999999999 !important
    &:hover
        opacity: 1 !important
    &.ctr-ntfError
        background: radial-gradient(ellipse at center, #ff1a00 0%,#ff1a00 100%) !important
    .ctr-ntfTitle
        font-weight: bold !important
    .ctr-ntfBody
        margin-left: 10px !important